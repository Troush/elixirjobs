<div class="ui raised segment" style="padding-bottom: 42px;">
  <h2>
    <%= @job["title"] %>
  </h2>
  <div class="ui grid">
    <div class="two wide column">
      <%= if @job["logo"] != "" do %>
      <img src="<%= @job["logo"] %>" class="ui tiny image">
      <% else %>
      <img class="ui avatar image" src="/images/elixir-logo.png">
      <% end %>
    </div>
    <div class="fourteen wide column">

      <h5>
        <span><%= @job["company"] %></span>

        <i class="marker icon"></i>
        <%= if @job["location"] do %>
        <span><%= @job["location"] %></span>
        <% else %>
        <span>Not Set</span>
        <% end %>
      </h5>
    </div>
  </div>

  <div class="ui divider"></div>
  <div class="ui grid">
    <div class="five wide column">
      <%= if @job["job_status"] == "Remote" do %>
      <div class="ui green horizontal label"><i class="world icon"></i> Remote</div>
      <% end %>
      <%= if @job["job_type"] == "Hourly Contract" do %>
      <div class="ui horizontal label"><i class="wait icon"></i> Hourly Contract</div>
      <% end %>
      <div class="ui divider"></div>
      <i class="mail icon"></i> <%= @job["email"] %>
      <div class="ui divider"></div>
      <i class="calendar icon"></i> Posted On <%= convert_date @job["date_created"] %>
      <br><br>
      <%= if @job["posted_by"] == @user do  %>
        <a href="<%= page_path(@conn, :edit, @job["id"]) %>" class="ui green button">Edit</a>
      <% end %>
    </div>
    <div class="nine wide column"><%= to_html @job["description"] %></div>
  </div>

</div>
